<%= render 'shared/errors', obj: @library %>
<div class='row'>
	<div class='col-xs-12'>
		<%= form_for(@library, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :name %>
			</div>
			<div class="col-sm-8">
				<%= f.text_field :name, class: "form-control", placeholder: "Name of library", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :description %>
			</div>
			<div class="col-sm-8">
				<%= f.text_area :description, rows: 3, class: "form-control", placeholder: "Description of library" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit class: 'btn btn-primary btn-lg' %>
			</div>
		</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel and return to listing", libraries_path %> ]
		</div>
	</div>
</div>