<h2 align="center">Title: <%= @library.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="center description"><strong>Description:</strong></h4>
	<hr>	
	<%= simple_format(@library.description) %>
	<div class="content-actions">
		<% if user_signed_in? && (@current_user == @library.user || current_user.admin?) %>
		<%= link_to "Edit this library", edit_library_path(@library), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete this library", library_path(@library), method: :delete,
			data: { confirm: "Are you sure you want to delete the library?"}, class: "btn btn-xs btn-danger" %>
		<% end %>
		<%= link_to "View all libraries", libraries_path, class: "btn btn-xs btn-success" %>
	</div>
</div>