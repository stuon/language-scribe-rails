<% obj.each do |document| %>
<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		<div class="well well-lg">
			<div class="content-title">
				<%= link_to document.title, document_path(document) %>
			</div>
			<div class="content-body">
				<%= truncate(document.content, length: 100) %>
			</div>
			<% if user_signed_in? && (current_user == document.user || current_user.admin?) %>
			<div class="content-actions">
				<%= link_to "Edit this document", edit_document_path(document), class: "btn btn-xs btn-primary" %>
				<%= link_to "Delete this document", document_path(document), method: :delete,
					data: { confirm: "Are you sure you want to delete the document?"}, class: "btn btn-xs btn-danger" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
<% end %>