<%= render 'shared/errors', obj: @document %>
<div class='row'>
	<div class='col-xs-12'>
		<%= form_for(@document, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-offset-2 col-sm-8">
					<%= f.collection_select :library_id, Library.all, :id, :name do |cb| %>
					<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :title %>
			</div>
			<div class="col-sm-8">
				<%= f.text_field :title, class: "form-control", placeholder: "Title of document", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :content %>
			</div>
			<div class="col-sm-8">
				<%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Content of document" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit class: 'btn btn-primary btn-lg' %>
			</div>
		</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel and return to listing", documents_path %> ]
		</div>
	</div>
</div>